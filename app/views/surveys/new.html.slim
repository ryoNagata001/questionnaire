h1 New survey

= form_for([@company, @company.surveys.build], url: company_surveys_path(@company.id)) do |f|
  - if @survey.errors.any?
    #error_explanation
      h2 = "#{pluralize(@survey.errors.count, "error")} prohibited this survey from being saved:"
      ul
        - @survey.errors.full_messages.each do |message|
          li = message

  .field
    = f.label :title
    = f.text_field :title
    = f.label :description
    = f.text_field :description, size: 70
  .actions = f.submit
= link_to 'Back', company_surveys_path(@company.id)
